;MULTIPLICAÇÃO

MULTIPLICA: LOAD R0 A
LOAD R1 B

COPY R4 R2
COPY R5 R3

ADD R4 R0
JN R2NEGATIVO
JNN R2POSITIVO

VERIFICAR3:
ADD R5 R0
JN R3NEGATIVO
JNN R3NEGATIVO

CONTINUA:
CALL MULT

WRITE R10
HALT

R2NEGATIVO: 
NEG R2 ;inverte para possibilitar multiplicação por somas
COPY R4 R1 ;guarda o sinal de R2
JUMP VERIFICAR3

R2POSITIVO: 
COPY R4 R0 ;guarda o sinal de R2
JUMP VERIFICAR3

R3NEGATIVO: 
NEG R3 ;inverte para possibilitar multiplicação por somas
COPY R5 R1 ;guarda o sinal de R3
JUMP CONTINUA

R3POSITIVO: 
COPY R5 R0 ;guarda o sinal de R3
JUMP CONTINUA

MULT:
COPY R10 R0
M:
SUB R3 R1
ADD R10 R2
JZ VSINAL
JMP M
VSINAL:
SUB R4 R1
JNZ R2NNEG
NEG R10
R2NNEG:
SUB R5 R1
JNZ R3NNEG
NEG R10
R3NNEG:
RET

A: WORD 0
B: WORD 1
