; DIVISAO

DIVISAO: LOAD R0 A
LOAD R1 B
COPY R7 R0
COPY R8 R0
COPY R10 R0

;READ R2
;READ R3

ADD R2 R0
JNN POS_1
NEG R2
COPY R7 R1
POS_1:
ADD R3 R0
JNN POS_2
NEG R3
COPY R8 R1

POS_2: 
CALL DIV
CALL SINAIS

WRITE R10
WRITE R2

HALT

DIV:
ADD R10 R1
SUB R2 R3
JZ FIMD
JN RESTO
JMP DIV
FIMD: RET

RESTO:
ADD R2 R3
SUB R10 R1
JMP FIMD

SINAIS: 
SUB R7 R1
JNZ OP2
NEG R10
NEG R2
OP2: SUB R8 R1
JNZ FIMS
NEG R10
NEG R2
FIMS: RET

A: WORD 0
B: WORD 1
